{
  "private": true,
  "version": "0.0.1",
  "description": "A monorepo template that integrates packaged build tools such as rollup, esbuild, and pnpm, and is suitable for typescript development.一个集成了rollup、esbuild、pnpm等打包构建工具，适用于typescript开发的monorepo模板。",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "create": "node scripts/create.js",
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "release": "node scripts/release.js",
    "serve": "serve",
    "test": "jest",
    "format": "eslint --fix --ext .ts packages && prettier --write \"packages/**/*.ts?(x)\"",
    "format:package": "prettier --write \"packages/**/package.json\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sileny/rollup-typescript-template.git"
  },
  "keywords": [
    "rollup-typescript-template",
    "monorepo",
    "rollup",
    "typescript",
    "template",
    "web"
  ],
  "author": "sunsilent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sileny/rollup-typescript-template/issues"
  },
  "homepage": "https://github.com/sileny/rollup-typescript-template#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "prettier --write"
    ],
    "src/**/*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.29.0",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@typescript-eslint/parser": "^5.31.0",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.3.6",
    "esbuild": "^0.14.53",
    "eslint": "^8.20.0",
    "execa": "^4.1.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "minimist": "^1.2.0",
    "prettier": "^2.7.1",
    "rollup": "^2.77.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "semver": "^7.3.7",
    "serve": "^14.0.1",
    "ts-jest": "^28.0.7",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
